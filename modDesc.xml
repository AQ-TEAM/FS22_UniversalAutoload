<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="61">

    <author>Loki_79</author>
    <version>1.0.0.0</version>
	
    <title>
        <en>Universal Autoload</en>
    </title>
	
    <description>
        <en>Configurable autoloading specialsiation for all flatbed trailers</en>
    </description>
	
	<multiplayer supported="true" />
	<iconFilename>modIcon.dds</iconFilename>
	
	<extraSourceFiles>
        <sourceFile filename="UniversalAutoloadInstaller.lua" />
    </extraSourceFiles>
	
 	<actions>
		<action name="UNIVERSALAUTOLOAD_TOGGLE_LOADING" category="VEHICLE" axisType="HALF" ignoreComboMask="false"/>
		<action name="UNIVERSALAUTOLOAD_UNLOAD_ALL" category="VEHICLE" axisType="HALF" ignoreComboMask="false"/>
		<action name="UNIVERSALAUTOLOAD_TOGGLE_TIPSIDE" category="VEHICLE" axisType="HALF" ignoreComboMask="false"/>
		<action name="UNIVERSALAUTOLOAD_TOGGLE_FILTER" category="VEHICLE" axisType="HALF" ignoreComboMask="false"/>
		<action name="UNIVERSALAUTOLOAD_CYCLE_TYPES_FW" category="VEHICLE" axisType="HALF" ignoreComboMask="false"/>
		<action name="UNIVERSALAUTOLOAD_CYCLE_TYPES_BW" category="VEHICLE" axisType="HALF" ignoreComboMask="false"/>
		<action name="UNIVERSALAUTOLOAD_SELECT_ALL" category="VEHICLE" axisType="HALF" ignoreComboMask="false"/>
	</actions>
	
	<inputBinding>
		<actionBinding action="UNIVERSALAUTOLOAD_TOGGLE_LOADING" >
			<binding device="KB_MOUSE_DEFAULT" input="KEY_r" />
		</actionBinding>
		<actionBinding action="UNIVERSALAUTOLOAD_UNLOAD_ALL" >
			<binding device="KB_MOUSE_DEFAULT" input="KEY_i" />
		</actionBinding>
		<actionBinding action="UNIVERSALAUTOLOAD_TOGGLE_TIPSIDE" >
			<binding device="KB_MOUSE_DEFAULT" input="KEY_u" />
		</actionBinding>
		<actionBinding action="UNIVERSALAUTOLOAD_TOGGLE_FILTER" >
			<binding device="KB_MOUSE_DEFAULT" input="KEY_o" />
		</actionBinding>
		<actionBinding action="UNIVERSALAUTOLOAD_CYCLE_TYPES_FW" >
			<binding device="KB_MOUSE_DEFAULT" input="KEY_y" />
		</actionBinding>
		<actionBinding action="UNIVERSALAUTOLOAD_CYCLE_TYPES_BW" >
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lshift KEY_y" />
		</actionBinding>
		<actionBinding action="UNIVERSALAUTOLOAD_SELECT_ALL" >
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_y" />
		</actionBinding>
	</inputBinding>
	
	<l10n>
		<text name="input_UNIVERSALAUTOLOAD_TOGGLE_LOADING">
			<en>Toggle loading</en>
			<de>Laden umschalten</de>
			<fr>Basculer le chargement</fr>
		</text>
		<text name="input_UNIVERSALAUTOLOAD_UNLOAD_ALL">
			<en>Unload</en>
			<de>Auskippen</de>
			<fr>Décharger</fr>
		</text>
		<text name="input_UNIVERSALAUTOLOAD_TOGGLE_FILTER">
			<en>Toggle loading filter</en>
			<de>Filter laden umschalten</de>
			<fr>Basculer le sélection de chargement</fr>
		</text>
		<text name="input_UNIVERSALAUTOLOAD_SELECT_ALL">
			<en>Select all loading types</en>
			<de>Alle Ladearten auswählen</de>
			<fr>Sélectionner tous types de chargement</fr>
		</text>
		<text name="input_UNIVERSALAUTOLOAD_CYCLE_TYPES_FW">
			<en>Cycle loading type</en>
			<de>Zyklusladeart</de>
			<fr>Type de chargement de cycle</fr>
		</text>
		<text name="input_UNIVERSALAUTOLOAD_CYCLE_TYPES_BW">
			<en>Cycle loading type back</en>
			<de>Zyklusladeart zurück</de>
			<fr>Type de chargement de cycle retour</fr>
		</text>
		<text name="input_UNIVERSALAUTOLOAD_TOGGLE_TIPSIDE">
			<en>Toggle unloading side</en>
			<de>Aktive entladeseite umschalten</de>
			<fr>Basculer le côté actif</fr>
		</text>
		
